<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.board.model.mapper.BoardMapper">
	<resultMap type="boardDto" id="board">
		<result column="id" property="id" />
		<result column="title" property="title" />
		<result column="content" property="content" />
		<result column="created_at" property="createdAt" />
		<result column="user_id" property="userId" />
		<result column="hit" property="hit" />
	</resultMap>
	
	<resultMap type="commentDto" id="comment">
		<result column="id" property="id" />
		<result column="content" property="content" />
		<result column="created_at" property="createdAt" />
		<result column="board_id" property="boardId" />
		<result column="user_id" property="userId" />
	</resultMap>
	
	<sql id="search">
		<if test="word != null and word != ''">
			<if test="key == 'title'">
				and title like concat('%', #{word}, '%')
			</if>
			<if test="key != 'title'">
				and ${key} = #{word}
			</if>
		</if>
	</sql>

	<!-- 게시글 작성 -->
	<insert id="writeArticle" parameterType="boardDto">
		insert into board(user_id, title, content) 
		values (#{userId}, #{title}, #{content})
	</insert>
	
	<!--  게시글 list -->
	<select id="listArticle" parameterType="map" resultMap="board">
		select *
		from board
		<where>
			<include refid="search"></include>
		</where>
		 
		ORDER BY 
		CASE 
		  WHEN user_id = 'admin' THEN 0 
		  ELSE 1 
		END ASC, 
  		created_at DESC
	</select>
	
	<!--  댓글  list -->
	<select id="getComment" parameterType="int" resultMap="comment">
		select *
		from comment
		where board_id = #{articleNo}
		ORDER BY created_at DESC
	</select>
	
	<!--  게시글 list -->
	<select id="listMyArticle" parameterType="string" resultMap="board">
		select *
		from board
		where user_id = #{userId}
		ORDER BY created_at DESC
	</select>
	
	<!--  총 게시글 수 조회 -->
	<select id="getTotalArticleCount" parameterType="map" resultType="int">
		select count(id)
		from board
		<where>
			<include refid="search"></include>
		</where>
	</select>
	
	<!--  게시글 단건 조회 -->
	<select id="getArticle" parameterType="int" resultMap="board">
		select *
		from board
		where id = #{id}
	</select>
	
	<!--  조회수 증가 -->
	<update id="updateHit" parameterType="int">
		update board
		set hit = hit+1
		where id = #{id}
	</update>
	
	<!--  게시글 수정 -->
	<update id="modifyArticle" parameterType="boardDto">
		update board
		set title = #{title}, content=#{content}
		where id = #{id}
	</update>
	
	
	<!--  게시글 삭제 -->
	<delete id="deleteArticle" parameterType="int">
		delete from board
		where id = #{id}
	</delete>
	
</mapper>